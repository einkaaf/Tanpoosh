<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#2fff00"> </solid>
            <corners android:radius="150dp"></corners>
            <stroke android:color="#eceff0" android:width="2dp"></stroke>
            <padding android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp"></padding>

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ef4444"> </solid>
            <corners android:radius="150dp"></corners>
            <stroke android:color="#eceff0" android:width="2dp"></stroke>
            <padding android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp"></padding>

        </shape>
    </item>

</selector>