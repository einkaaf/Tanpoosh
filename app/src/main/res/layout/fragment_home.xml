<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.erfankazemi.tanposh.Home_Fragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="423dp"
        android:orientation="vertical">

        <ViewFlipper
            android:id="@+id/view_flipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/bb"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/aa"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cc"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/dd"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ee"/>

        </ViewFlipper>

        <android.support.v7.widget.CardView
            android:id="@+id/cardreg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/regText"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:hint="در خبرنامه ما عضو شوید"
                    android:inputType="textEmailAddress"
                    android:text=""/>

                <Button
                    android:id="@+id/register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/reg_btn_shape"
                    android:text="عضویت"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            app:srcCompat="@drawable/cc"/>

        <Button
            android:id="@+id/about"
            android:background="@drawable/reg_btn_shape"
            android:layout_width="190dp"
            android:layout_height="45dp"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:text="about us"/>


    </LinearLayout>


</FrameLayout>
